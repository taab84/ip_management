<div class="col-md-6">
<div class="panel panel-info">
<div class="panel-heading"><h2>Enregistrer</h2></div>
<div class="panel-body">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, placeholder: "Votre email" %>
    <%= f.input :username, required: true, autofocus: true, placeholder: "Votre nom d'utilisateur" %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "Votre mot de passe" %>
    <%= f.input :password_confirmation, required: true, placeholder: "Confirmez votre mot de passe" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Enregistrer" %>
  </div>
<% end %>
<div class="col-md-12">
<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
