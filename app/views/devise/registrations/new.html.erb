<div class="col-md-6">
<div class="panel panel-info">
<div class="panel-heading"><h2><%= I18n.t("menu.register") + " " + User.model_name.human %></h2></div>
<div class="panel-body">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :fullname, required: true, autofocus: true, placeholder: true %>
    <%= f.input :username, required: true, placeholder: true %>
    <%= f.input :email, required: true, placeholder: true %>
    <%= f.input :password, required: true, hint: (t('simple_form.hints.user.password', count: @minimum_password_length) if @minimum_password_length), placeholder: true %>
    <%= f.input :password_confirmation, required: true, placeholder: true %>
  </div>

  <div class="row">
  <div class="col col-md-6">
    <%= render "devise/shared/links" %>
  </div>
  <div class="col col-md-6">
  <div class="form-actions">
    <%= f.button :submit, I18n.t("menu.register"), :class => 'pull-right' %>
  </div>
  </div>
  </div>
<% end %>
</div>
</div>
</div>
