<div class="col-md-6">
<div class="panel panel-info">
<div class="panel-heading"><h2><%= I18n.t("menu.edit") + " " + User.model_name.human %></h2></div>
<div class="panel-body">

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :fullname, required: true, autofocus: true, placeholder: true %>
    <%= f.input :username, required: true, autofocus: true, placeholder: true %>
    <%= f.input :email, required: true, autofocus: true, placeholder: true %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: "Laisser ce champ vide si vous ne vouslez pas changer votre mot de passe", required: false, placeholder: "Votre nouveau mot de passe" %>
    <%= f.input :password_confirmation, required: false, placeholder: true %>
    <%= f.input :current_password, hint: true, required: true, placeholder: true %>
  </div>

  <div class="form-actions">
    <%= link_to "Arriere", :back, :class => 'btn btn-warning' %>
    <%= f.button :submit, "Modifier", :class => 'pull-right' %>
  </div>
<% end %>


</div>
</div>
</div>
