<div class="col-md-6">
<div class="panel panel-info">
<div class="panel-heading"><h2>Editez <%= resource_name.to_s.humanize %></h2></div>
<div class="panel-body">

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, placeholder: "Votre email" %>
    <%= f.input :username, required: true, autofocus: true, placeholder: "Votre nom d'utilisateur" %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: "Laisser ce champ vide si vous ne vouslez pas changer votre mot de passe", required: false, placeholder: "Votre nouveau mot de passe" %>
    <%= f.input :password_confirmation, required: false, placeholder: "Confirmer votre nouveau mot de passe" %>
    <%= f.input :current_password, hint: "Obligatoire si vous voulez changer votre mot de passe", required: true, placeholder: "Votre mot de passe actuel" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Modifier" %>
  </div>
<% end %>

<div class="col-md-12">
<h3>Annuler Mon Compte</h3>

<p>Non Satisfait? <%= link_to "Annuler Mon Compte", registration_path(resource_name), data: { confirm: "Etes vous sure?" }, method: :delete %></p>

<%= link_to "Arriere", :back %>

</div>
</div>
</div>
</div>
