<div class="well well-sm">
  <div class="chardin_box" data-intro="will_paginate's entries info works as expected." data-position="bottom">
    <%= page_entries_info orders %>
  </div>
  <div class="chardin_box" data-intro="Spinner indicates update." data-position="bottom">
    <%= render_filterrific_spinner %>
  </div>
</div>

<table class="table table-bordered">
<thead class="thead-light">
  <tr class="active">
    <th class="centered"><%= I18n.t('tables.headers.number') %></th>
    <th class="centered"><%= I18n.t('tables.headers.by') %></th>
    <th class="centered"><%= I18n.t('tables.headers.timestamped') %></th>
    <th class="centered"><%= I18n.t('tables.headers.value') %></th>
  </tr>
</thead>
<tbody>
  <% orders.each do |order| %>
    <tr class="order">
      <td class="number centered">
        <%= order.number %>
      </td>
      <td class="name centered">
        <%= order.payement.name %>
      </td>
      <td class="created_at centered">
        <%= I18n.l order.created_at %>
      </td>
      <td class="value">
        <%= number_to_currency(order.payement.value) %>
      </td>
    </tr>
  <% end %>
</tbody>
</table>

<div class="chardin_box" data-intro="will_paginate's paginator works as expected." data-position="top">
  <%= will_paginate orders, renderer: BootstrapPagination::Rails %>
</div>