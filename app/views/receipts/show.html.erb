<div class="panel panel-info">
  <div class="panel-heading">
    <h1 class="panel-title">Receipt info</h1>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col col-md-4">
      <p>
        <strong>Number :</strong> <%= @receipt.number %>/<%= @receipt.serie %><br />
        <strong>Type:</strong> <%= @receipt.type %><br />
        <strong>Owner:</strong> <%= @receipt.owner_name %><br />
        <strong>Address:</strong> <%= @receipt.owner_street %>, <%= @receipt.owner_wilaya %><br />
      </p>
    </div>
    <div class="col col-md-4">
    <p>
      <strong>Total :</strong> <%= @receipt.total %><br />
      <strong>Classes:</strong> <%= @receipt.classes %><br />
    </p>
  </div>
    <div class="col col-md-4">
      <p>
      <% if @receipt.representative %>
      <strong>Representative:</strong> <%= @receipt.representative.fullname %><br />
      <% end %>
      <strong>Created By:</strong> <%= @receipt.user.fullname %><br />
      <strong>Group:</strong> <%= @receipt.user.group.name %><br />
      </p>
    </div>
    </div>
</div>
</div>
