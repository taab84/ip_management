<%= simple_form_for@receipt, wrapper: :inline_form do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :owner_name %>
    <div class="row">
    <div class="col col-md-8"><%= f.input :owner_street %> </div>
    <div class="col col-md-4"><%= f.input :owner_wilaya %> </div>
    </div>
    <%= f.association :representative, prompt: t('simple_form.prompts.receipt.representative') %>
    <%= render :partial => "form_cases", :locals=>{:f=>f} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
